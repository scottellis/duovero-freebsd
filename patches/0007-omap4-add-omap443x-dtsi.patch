+	};
+
+	soc: omap4430 {
+		#address-cells = <1>;
+		#size-cells = <1>;
+		compatible = "simple-bus";
+		ranges;
+		bus-frequency = <0>;
+
+		omap4_prcm@4a306000 {
+	   		compatible = "ti,omap4_prcm";
